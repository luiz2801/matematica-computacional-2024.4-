import numpy as np
import matplotlib.pyplot as plt

def plot_lambda_function(func, x_min=-10, x_max=10, num_points=5000):
    """
    Função para plotar o gráfico de uma função lambda.
    
    :param func: Função lambda a ser plotada.
    :param x_min: Limite inferior do eixo x (padrão: -10).
    :param x_max: Limite superior do eixo x (padrão: 10).
    :param num_points: Número de pontos para o gráfico (padrão: 500).
    """
    # Gerando valores de x no intervalo definido
    x_vals = np.linspace(x_min, x_max, num_points)
    
    # Calculando os valores de y para a função lambda
    y_vals = func(x_vals)
    
    # Plotando o gráfico
    plt.figure(figsize=(8, 6))
    plt.plot(x_vals, y_vals, label='Função Lambda')
    plt.title('Gráfico da Função Lambda')
    plt.xlabel('x')
    plt.ylabel('f(x)')
    plt.grid(True)
    plt.legend()
    plt.show()

# Exemplo de uso
plot_lambda_function(lambda x: np.exp(x), -10, 10)
